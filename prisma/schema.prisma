generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id            String    @id @default(cuid())
  short         String    @unique
  full          String
  visitCount    Int       @default(0)
  userId        String?
  lastVisitedAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
