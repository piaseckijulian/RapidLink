{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": [".next"]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [".next"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "error"
      }
    },
    "ignore": [".next"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
